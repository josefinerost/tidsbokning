<%= simple_form_for(:session, url:session_path) do |f| %>
  <%= f.input(:email, as: :email) %>
  <%= f.input(:password, as: :password) %>
  <%= f.button(:submit, "Logga in") %>
<% end %>

<div class="other-links mt-6">
  <% if Clearance.configuration.allow_sign_up? %>
    <%= link_to("Registrering", sign_up_path, class: "button") %>
  <% end %>
  <%= link_to("Glömt lösenord", new_password_path, class: "button") %>
</div>
