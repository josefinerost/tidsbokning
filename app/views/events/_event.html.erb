<div class="w-full md:w-1/3 sm:w-1/2 p-2">
  <%= link_to(event_path(event.id), class: "text-grey-darkest") do %>
    <div class="shadow-lg rounded-lg">
      <div class="rounded-lg rounded-b-none h-64 bg-cover p-6"
           style="background-image: url(<%= event.image.attached? ? url_for(event.image) : image_url('winter.jpg') %>)">
        <div class="bg-white h-16 w-16 rounded-lg p-2 border border-grey-light shadow-inner">
          <div class="text-center text-lg font-bold">
            <%= l(event.start, format: '%d') %>
          </div>
          <div class="text-center">
            <%= l(event.start, format: '%b') %>
          </div>
        </div>
      </div>
      <div class="rounded-lg rounded-t-none border-b border-r border-l border-grey-light py-2 px-4">
        <h3 class="title">
          <%= event.title %>
        </h3>
        <div class="pd-2 text-grey-darker">
          <%= simple_format(event.summary) %>
        </div>
        <br/>
        <%= fa_icon('calendar', text: l(event.start, format: '%A %d %B %Y'))%>
        <br/>
        <%= fa_icon('clock-o', text: l(event.start, format: '%H:%M'))%>
        <br/>
        <%= fa_icon('map-marker', text: event.location) %>
      </div>
    </div>
  <% end %>
</div>
